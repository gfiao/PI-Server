<h1>Listing weathers</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Min temp</th>
      <th>Max temp</th>
      <th>City</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.date %></td>
        <td><%= weather.min_temp %></td>
        <td><%= weather.max_temp %></td>
        <td><%= weather.city %></td>
        <td><%= weather.description %></td>
        <td><%= weather.image_url %></td>
        <td><%= link_to 'Show', weather %></td>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weather', new_weather_path %>
