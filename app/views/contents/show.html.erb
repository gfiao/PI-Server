<div class="container">

  <style>
      p {
          font-size: 110%;
          font-family: "Myriad Pro Regular";
      }

  </style>

  <p id="notice"><%= notice %></p>

  <h3>
    <%= @content.title %>
  </h3>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag @content.link_image, class: 'img-responsive' %>
    </div>

    <div>


      <p>
        <strong>Description:</strong>
        <%= @content.description %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= @content.date %>
      </p>

      <p>
        <strong>Views:</strong>
        <%= @content.views %>
      </p>
    </div>
  </div>

  <p>
    <%= @content.news_text %>
  </p>

  <%= link_to 'Edit', edit_content_path(@content) %> |
  <%= link_to 'Back', contents_path %>

</div>