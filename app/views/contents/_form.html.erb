<%= simple_form_for(@content) do |f| %>
    <% if @content.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

          <ul>
            <% @content.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :titulo %>
      <br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :link_imagem %>
      <br>
      <%= f.text_field :link_image, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :descrição %>
      <br>
      <%= f.text_area :description, class: 'form-control' %>
    </div>



    <div class="field form-group">
      <%= f.label :texto_da_noticia %>
      <br>
      <%= f.text_area :news_text, class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.association :tags, label_method: :tag, value_method: :id, as: :check_boxes %>
    </div>


    <%= simple_fields_for :video do |v| %>
        <%= v.input :link_video, required: false %>
    <% end %>

    <div class="actions" style="margin-top: 2%">
      <%= f.submit 'Adicionar conteudo', class: "btn btn-default" %>
    </div>
<% end %>
