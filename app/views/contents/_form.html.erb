<%= simple_form_for(@content) do |f| %>
    <% if @content.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

          <ul>
            <% @content.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :link_image %>
      <br>
      <%= f.text_field :link_image %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :date %>
      <br>
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label :news_text %>
      <br>
      <%= f.text_area :news_text %>
    </div>

    <div class="field">
      <%= f.association :tags, label_method: :tag, value_method: :id, as: :check_boxes %>
    </div>



    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
