    <div class=" col-md-9">
      <div class="row">
        <div class="col-xs-5 right-align">
          <strong>Avatar:</strong>
        </div>
        <div class="col-xs-7">
          <%= (image_tag @user.avatar_url) %>
          <%= @user.email %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-5 right-align">
          <strong>Nome:</strong>
        </div>
        <div class="col-xs-7">
