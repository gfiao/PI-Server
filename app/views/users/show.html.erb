        </div>
      </div>
      <div class="row">
        <div class="col-xs-5 right-align">
          <strong>Género:</strong>
        </div>
        <div class="col-xs-7">
          <%= @user.gender %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-5 right-align">
          <strong>Sobre mim:</strong>
        </div>
        <div class="col-xs-7">
          <%= @user.about_me %>
        </div>
      </div>
      <div class="col-xs-12" id="links">
        <%= link_to 'Edit', edit_user_registration_path %> |
        <%= link_to 'Back', users_path %>
      </div>


    </div>

  </div>

