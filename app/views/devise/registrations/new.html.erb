<div id="" class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <h2 style="margin-bottom: 3%; margin-top: 3%"><b>Criar Conta</b></h2>

      <div class="row">
        <div class="form-group col-md-5">
          <div><%= f.label :nome, class: 'form' %>
            <br/>
            <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Nome' %></div>
        </div>

        <div class="form-group col-md-5">
          <div><%= f.label :email %>
            <br/>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %></div>
        </div>
      </div>

      <!--<div class="form-inline" role="form">-->
      <div class="row">
        <div class="form-group col-md-5">
          <div><%= f.label :palavra_passe %>
            <br/>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control',
                                 placeholder: 'Palavra Passe' %>
          </div>
        </div>

        <div class="form-group col-md-5">
          <div><%= f.label :confimação_palavra_passe %>
            <br/>
            <%= f.password_field :password_confirmation, autocomplete: 'off',
                                 class: 'form-control', placeholder: 'Confirmar Palavra Passe' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div><%= f.label :data_de_nascimento %>
          <br/>
          <%= f.date_select :birth_date, start_year: 1920, end_year: Time.now.year %></div>
      </div>

      <div class="row">
        <div class="form-group col-xs-5">
          <div>
            <%= f.label :curso %> </br>
            <%= f.text_field :course, class: 'form-control', placeholder: 'Diz-nos qual é o teu curso!' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-5">
          <div><%= f.label :sobre_mim %>
            <br/>
            <%= f.text_area :about_me, class: 'form-control', placeholder: 'Diz-nos algo sobre ti!' %></div>
        </div>
      </div>

      <div class="radio-inline">
        <%= f.radio_button :gender, 'male' %>
        <%= f.label :gender, 'Masculino', :value => 'male' %>
      </div>
      <div class="radio-inline">
        <%= f.radio_button :gender, 'female' %>
        <%= f.label :gender, 'Feminino', :value => 'female' %>
      </div>

      <div style="margin-top: 2%"><%= f.submit "Sign up" %></div>
  <% end %>

  <p style="margin-top: 2%">Já tem conta? <%= render "devise/shared/links" %></p>
</div>

