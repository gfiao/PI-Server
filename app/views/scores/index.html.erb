<div class="container space-bottom space-top" id="cont1" style="padding-bottom: 3%">
  <h2 class="page-header" style="  margin-bottom: 4%;">As minhas pontuações</h2>
  <table class="table table-striped">
    <tr>
      <th>Nome</th>
      <th>Jogo</th>
      <th>Pontuação</th>
    </tr>
    <% @scores.each do |score| %>
        <tr>
          <td><%= User.find_by(id: score.user_id).name %></td>
          <% game = Game.find_by(id: score.game_id) %>
          <td><%= link_to game.name, game %></td>
          <td><%= score.score %></td>
        </tr>
    <% end %>
  </table>
</div>
